<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <form method="POST" action="/restaurants" class="needs-validation" novalidate>
          <!---name -->
            <div class="form-group form-row">
              <label for="name" class="col-md-4 col-form-label">Restaurant Name</label>
              <div class="col-md-8">
                <input type="text" name="name" id="name" class="form-control" required></input>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!---name_en-->
            <div class="form-group form-row">
              <label for="name_en" class="col-md-4 col-form-label">Restaurant Name(in english)</label>
              <div class="col-md-8">
                <input type="text" name="name_en" id="name_en" class="form-control" required></input>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!--category-->
            <div class="form-group form-row">
              <label for="category" class="col-md-4 col-form-label">
                Category
              </label>
              <div class="col-md-8">
                <input list="categories" class="form-control" name="category" id="category" required/>
                <datalist id="categories">
                  <option>中東料理</option>
                  <option>日本料理</option>
                  <option>義式餐廳</option>
                  <option>美式</option>
                  <option>酒吧</option>
                  <option>咖啡</option>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!--image-->
            <div class="form-group form-row">
              <label for="image" class="col-md-4 col-form-label">Restaurant Image</label>
              <div class="col-md-8">
                <input type="text" name="image" id="image" class="form-control" placeholder="URL link.." required></input>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!--location-->
            <div class="form-group form-row">
              <label for="location" class="col-md-4 col-form-label">Address</label>
              <div class="col-md-8">
                <input type="text" name="location" id="location" class="form-control" required></input>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!--phone-->
            <div class="form-group form-row">
              <label for="phone" class="col-md-4 col-form-label">Phone Number</label>
              <div class="col-md-8">
                <input type="text" name="phone" id="phone" class="form-control" required></input>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!--google_map-->
            <div class="form-group form-row">
              <label for="google_map" class="col-md-4 col-form-label">Google map link</label>
              <div class="col-md-8">
                <input type="text" name="google_map" id="google_map" class="form-control" placeholder="URL link.." required></input>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!--rating-->
            <div class="form-group form-row">
              <label for="rating" class="col-md-4 col-form-label">Rating</label>
              <div class="col-md-8">
                <input type="number" name="rating" id="rating" class="form-control" min ='0'max='5' step='0.1' required></input>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <!-- description -->
            <div class="form-group form-row">
              <label for="description" class="col-md-4 col-form-label">
                Description
              </label>
              <div class="col-md-8">
                <textarea class="form-control"  id="description" name="description" style='width: inherit' required></textarea>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  this field is required！
                </div>
              </div>
            </div>
            <div class='d-flex flex-row justify-content-end'>
              <button class="btn btn-success" type="submit" id="submit">Create</button>
            </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<script>
   // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll('.needs-validation')

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  
</script>